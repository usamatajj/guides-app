{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["./assets/*"]
    },
    "baseUrl": "."
  },
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules"]
}
